<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="stockanalyzer.api.models.User" table="User">
		<id name="id" type="int">
			<column name ="id"/>
			<generator class="identity"/>
		</id>
		<property name="username" type="string">
			<column name="username"/>
		</property>
		<property name="email" type="string">
			<column name="email"/>
		</property>
		<property name="passwordHash" type="string">
			<column name="password"/>
		</property>
	</class>
</hibernate-mapping>